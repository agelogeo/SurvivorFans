<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gr.survivor.admin.survivorfans.MainActivity"
    tools:showIn="@layout/activity_main"
    android:weightSum="1"
    android:backgroundTintMode="src_in"
    android:clipToPadding="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hashtag_layout"
            android:padding="5dp"
            android:background="?attr/colorButtonNormal"
            android:layout_marginBottom="5dp">

            <TextView
                android:text="Σύνδεσμοι σε αναζήτησεις hashtag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:id="@+id/hashtag_searches">

                <ImageView
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/ht_search"
                    android:id="@+id/imageView6"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/twitter_sqr_ic"
                    android:id="@+id/ht_twitter_btn"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/fb_sqr_ic"
                    android:id="@+id/ht_fb_btn"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/insta_sqr_ic"
                    android:id="@+id/ht_insta_btn"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/official_layout"
            android:background="?attr/colorButtonNormal"
            android:padding="5dp"
            android:weightSum="1"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:text="Σύνδεσμοι στην ιστοσελίδα του ΣΚΑΙ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textStyle="normal|bold"
                android:textAlignment="center" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/official_teams"
                android:layout_marginTop="5dp"
                android:layout_weight="1.30"
                android:layout_height="60dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/red_team"
                    android:id="@+id/celebrities_btn"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="5dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/blue_team"
                    android:id="@+id/fighters_btn"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/official_social"
                android:layout_marginBottom="5dp"
                android:layout_height="50dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/fb_sqr_ic"
                    android:id="@+id/social_fb_btn"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:layout_marginRight="5dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/twitter_sqr_ic"
                    android:id="@+id/social_twitter_btn"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/insta_sqr_ic"
                    android:id="@+id/social_insta_btn"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/youtube_sqr_ic"
                    android:id="@+id/social_video_btn"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/news_sqr_ic"
                    android:id="@+id/social_news_btn"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/featured_layout"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="?attr/colorButtonNormal"
            android:padding="5dp">

            <TextView
                android:text="Σύνδεσμοι σε σχετικές ομάδες"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <Button
                android:text="ATAKA ΕΠΙ ΤΟΠΟΥ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_ataka_epi_topou"
                android:layout_below="@+id/twitter_feed_btn"
                android:layout_alignRight="@+id/video_btn"
                android:layout_alignEnd="@+id/video_btn"
                android:backgroundTint="@android:color/holo_blue_dark" />

            <Button
                android:text="Συλογος Μανατζερ Ραγκπι"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_sullogos_ragby"
                android:backgroundTint="@android:color/holo_blue_light" />

            <Button
                android:text="Survivor Memes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_survivor_memes"
                android:backgroundTint="@android:color/holo_blue_bright" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
